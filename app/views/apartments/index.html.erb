<h1>物件一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  <tr>
<% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.name %></td>
    <td><%= apartment.rent %></td>
    <td><%= apartment.address %></td>
    <td><%= apartment.age %></td>
    <td><%= apartment.memo %></td>
    <td><%= link_to "詳細", apartment_path(apartment.id) %></td>
    <td><%= link_to "編集", edit_apartment_path(apartment.id) %></td>
    <td><%= link_to "削除", apartment_path(apartment.id),method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to "物件を登録する", new_apartment_path %>
