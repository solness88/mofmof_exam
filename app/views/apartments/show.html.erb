<div>
  <ul>
  <li><b>物件名：</b><%= @apartment.name %></li>
  <br>
  <li><b>賃料：</b><%= @apartment.rent %></li>
  <br>
  <li><b>住所：</b><%= @apartment.address %></li>
  <br>
  <li><b>築年数：</b><%= @apartment.age %></li>
  <br>
  <li><b>備考：</b><%= @apartment.memo %></li>
</ul>
<p style = "border-bottom: 1px solid black"></p>
<div>
  <ul>
    <% @apartment.stations.each do | station | %>
      <% if station.station.blank? %>
        <% break %>
      <% else %>
        <li>最寄り駅:<%= @station_count += 1 %></li>
        <li><b>路線名：</b><%= station.route %></li>
        <br>
        <li><b>駅名：</b><%= station.station %></li>
        <br>
        <li><b>徒歩分数：</b><%= station.by_walk %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<%= link_to "編集", edit_apartment_path(@apartment.id) %>
<%= link_to '戻る', :back %>
